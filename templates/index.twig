{% extends "_layout" %}

  {% block content %}

      <section class="hero__section">
        <img class="hero__img" src="assets/banners/foreground.jpg">
        <img class="hero__img--bg" src="assets/banners/background.jpg">
        <div class="hero__content">
          <h1 class="hero__title"><span class="hero__title--line">Experience</span> comfort &amp; elegance</h1>
          <a class="hero__cta" href="{{siteUrl}}products">View collection</a>
        </div>
      </section>
      <section class="categories__section">
        {% set categories = craft.entries().section('categories').all() %} 
        <h3 class="categories__title">Our categories...</h3>
        {% include 'components/categoriesSelect.twig' %}
      </section>
      <section class="spotlight__section">
        <div class="spotlight__wrapper">
          <div class="spotlight__content">
            <h2 class="spotlight__title">In the spotlight.</h2>
            <p>Explore our bestselling products that earned a place in the spotlight.</p>
          </div>
          {% include 'components/sortingSelect.twig' %}
        </div>
        {% set products = craft.entries().section('products').orderBy('RAND()').spotlight('1').limit(8).all() %}
        {% include 'components/allProducts.twig' %}
        <div class="spotlight__button">
          <a href="{{siteUrl}}products">More Products</a>
        </div>
      </section>
      
  {% endblock %} 