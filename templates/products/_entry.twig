{% extends "_layout" %}

    {% block content %}

    <section class="details__section">
        <div class="details__img">
            <img src="{{entry.productImage.one().url()}}">
        </div>
        <div class="details__content">
            <span class="details__brand">{{entry.brand.one()}}</span>
            <h4 class="details__title">{{entry.title}}</h4>
            <p class="details__price">{{entry.price}}<span class="details__price--info">Monthly payment plan is possible.</span></p>
            <p class="details__description">{{entry.description}}</p>
            <div class="details__color">
                <span>{{entry.colorName}}</span>
                <div class="color__rectangle">
                    <div class="color" style="background-color: {{entry.colorCode}}"></div>
                </div>
            </div>
            <a href="{{siteUrl}}cart" class="details__button">Add to cart</a>
